Language: Cpp
BasedOnStyle: LLVM

# Indentation
IndentWidth: 4
TabWidth: 4
UseTab: Never

# Braces (Option B / Allman)
BreakBeforeBraces: Allman
BreakBeforeInheritanceComma: true

# Zeilenlänge
ColumnLimit: 10000

# Pointer/References (Matches found code: Type &Name)
PointerAlignment: Right

# If-Statements
# Verhindert, dass kurze Ifs in eine Zeile gezwungen werden (behält neue Zeile bei)
AllowShortIfStatementsOnASingleLine: Never
# Erlaubt Ifs ohne Klammern (Clang-Format fügt standardmäßig keine hinzu, außer konfiguriert)
# Wir fügen keine Option "InsertBraces" hinzu, also bleibt es flexibel.

# Constructor Initializers
ConstructorInitializerAllOnOneLineOrOnePerLine: false
AllowAllConstructorInitializersOnNextLine: false
PackConstructorInitializers: Never
ConstructorInitializerIndentWidth: 4

# Sonstiges
SortIncludes: true
Standard: c++17
AccessModifierOffset: -4
